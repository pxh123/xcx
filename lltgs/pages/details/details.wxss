/* pages/details/details.wxss */
.container{background:#efefef;padding-bottom:100rpx;}
.goods_inf{padding:25rpx;background:#fff;}
.goods_inf image{width:700rpx;height:700rpx;}
.goods_inf .goods_cont{padding-left:10rpx;}
.goods_inf .title{font-size:32rpx;color:#353535;line-height:50rpx;display:block;margin-bottom:15rpx;}
.goods_inf .des{display:block;height:30rpx;font-size:26rpx;color:#888888;line-height:30rpx;margin-bottom:25rpx;}
.goods_inf .inf{font-size:28rpx;color:#353535;line-height:80rpx;border-top:1rpx solid #efefef;position:relative;}
.goods_inf .inf .price{color:#e64340;font-size:40rpx;margin-right:50rpx;}
.goods_inf .inf .service{background:#f16868;padding:12rpx;border-radius:50%;position:absolute;right:10rpx;top:50%;transform:translateY(-50%)}
.goods_size{margin-top:20rpx;padding:25rpx 25rpx 25rpx 35rpx;background:#fff;}
.goods_size .title{display:block;font-size:40rpx;line-height:60rpx;color:#353535;padding-bottom:10rpx;border-bottom:1rpx solid #efefef;margin-bottom:15rpx;}
.goods_size .goods_specs{padding:15rpx 0;}
.goods_size .gw_title{font-size:30rpx;color:#bbb;line-height:50rpx;margin-right:20rpx;display:inline-block;}
.goods_size .gw_options{display:inline-block;} 
.goods_size .gw_options text{display:inline-block;font-size:30rpx;color:#353535;line-height:50rpx;padding:0 20rpx;background:#f0f0f0;margin-right:20rpx;border-radius:5rpx;}
.goods_size .goods_specs  .selected{color:#fff;background:#e64340;}
.goods_count{font-size:30rpx;color:#bbb;padding:15rpx 0 0;} 
.goods_count text{display:inline-block;vertical-align:middle;}
.goods_count .gc_title{margin-right:20rpx;}
.goods_count .gc_cont{display:inline-block;border:1rpx solid #a0a0a0;border-radius:10rpx;position:relative;width:240rpx;height:60rpx;text-align:center;}
.goods_count .minus,.goods_count .plus{width:44rpx;height:44rpx;}
.goods_count .minus image,.goods_count .plus image{width:100%;}
.goods_count .minus{position:absolute;left:13rpx;top:50%;transform:translateY(-50%);}
.goods_count .plus{position:absolute;right:13rpx;top:50%;transform:translateY(-50%);}
.goods_count .num{color:#353535;font-size:32rpx;width:100rpx;text-align:center;line-height:60rpx;height:60rpx;border-left:1rpx solid #a0a0a0;border-right:1rpx solid #a0a0a0;}
.goods_details{background:#fff;margin-top:20rpx;padding:10rpx 30rpx;}
.loading{height:16vw;overflow:hidden;position:relative;}
.loading image{transform:translate(-4%,-53%);width:100%;display:block;}
.loading text{position:absolute;left:0;bottom:0;width:100%;height:40rpx;color:#ff9a00;background:#fff;text-align:center;font-size:24rpx;line-height:40rpx;}
.goods_details .gd_text{font-size:40rpx;line-height:80rpx;color:#353535;border-bottom:1rpx solid #efefef;}
.goods_details .noDesc{font-size:28rpx;line-height:100rpx;color:#666;width:100%;}
.goods_details .gd_img{padding:16rpx 6rpx;}
.goods_details .gd_img image{width:100%;display:block;}
.detail_btn{position:fixed;left:0;bottom:0;width:100%;height:100rpx;}
.detail_btn text{display:block;background:#e64340;font-size:40rpx;line-height:100rpx;color:#fff;text-align:center;}