/**index.wxss**/
page{background:#fff;height:auto;}
.current_goods{padding:25rpx;}
.goods image{width:700rpx;height:700rpx;}
.goods .goods_cont{padding-left:20rpx;}
.goods .title{font-size:32rpx;color:#353535;line-height:50rpx;display:block;margin-bottom:15rpx;}
.goods .des{display:block;height:30rpx;font-size:26rpx;color:#888888;line-height:30rpx;margin-bottom:25rpx;}
.goods .inf{font-size:28rpx;color:#353535;line-height:80rpx;border-top:1px solid #efefef;}
.goods .inf .price{color:#e64340;font-size:40rpx;margin-right:50rpx;}
#odd_goods{padding:25rpx 50rpx 25rpx 0;}
#even_goods{padding:25rpx 0 25rpx 50rpx;}
.hs_title{text-align:center;line-height:40rpx;}
.hs_title text{width:30%;margin:0 2.5%;height:1px;background:#eeeeee;display:inline-block;vertical-align: middle;}
.loading{height:16vw;overflow:hidden;position:relative;}
.loading image{transform:translate(-4%,-53%);width:100%;display:block;}
.loading text{position:absolute;left:0;bottom:0;width:100%;height:40rpx;color:#ff9a00;background:#fff;text-align:center;font-size:24rpx;line-height:40rpx;}
.no_more{font-size:32rpx;line-height:50rpx;text-align:center;margin:60rpx 0 0;color:#999;padding-bottom:40rpx;}